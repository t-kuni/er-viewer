FROM node:20-alpine

# Install git for build info generation
RUN apk add --no-cache git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install
RUN npm install -g concurrently tsx

# Copy source code
COPY . .

# Install frontend dependencies
RUN cd public && npm install
RUN npm install -g vite

EXPOSE 30033 5173

# Use npm run dev for development with hot reload
CMD ["npm", "run", "dev"]
