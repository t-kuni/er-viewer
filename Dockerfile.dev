FROM node:20-alpine

# Install git for build info generation
RUN apk add --no-cache git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

EXPOSE 30033

# Use ts-node-dev for development with hot reload
CMD ["npx", "ts-node-dev", "--respawn", "server.ts"]
