{
  "name": "er-viewer",
  "version": "1.0.0",
  "description": "ER Diagram Viewer for MySQL databases",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"tsx watch --clear-screen=false server.ts\" \"npm run --prefix public dev\"",
    "build": "tsup server.ts --format esm,cjs && npm run --prefix public build",
    "prebuild": "mkdir -p scripts",
    "build:ts": "tsc",
    "dev:ts": "tsc --watch",
    "typecheck": "tsc -p tsconfig.server.json --noEmit && tsc -p public/tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:mock-coverage": "COLLECT_COVERAGE=true jest --coverage",
    "test:mock-coverage:open": "npm run test:mock-coverage && open coverage/mock-coverage/index.html",
    "test:memory": "node --expose-gc --max-old-space-size=2048 ./node_modules/.bin/jest --logHeapUsage",
    "test:detect-leaks": "jest --detectLeaks",
    "test:quality": "node .github/scripts/check-test-rules.js",
    "test:lint": "eslint --ext .js,.ts --config .eslintrc.test.js tests/**/*.test.*",
    "test:all": "npm run lint && npm run format:check && npm run typecheck && npm test && npm run test:quality",
    "generate": "npx tsp compile scheme/main.tsp && npx openapi-typescript-codegen --input scheme/openapi.yaml --output public/src/api/client",
    "prepare": "husky install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "livereload": "^0.9.3",
    "mysql2": "^3.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/livereload": "^0.9.5",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@typespec/compiler": "^0.60.0",
    "@typespec/http": "^0.60.0",
    "@typespec/openapi3": "^0.60.0",
    "@typespec/rest": "^0.60.0",
    "babel-jest": "^30.0.0",
    "chokidar": "^3.5.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^8.0.3",
    "jest": "^30.0.0",
    "jest-canvas-mock": "^2.5.2",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "er-diagram",
    "mysql",
    "database",
    "visualization"
  ],
  "author": "",
  "license": "MIT"
}
