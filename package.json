{
  "name": "er-viewer",
  "version": "1.0.0",
  "description": "ER Diagram Viewer for MySQL databases",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:watch": "NODE_ENV=development nodemon server.js --watch public --ext html,css,js",
    "build": "node scripts/generate-build-info.js && echo 'Build completed'",
    "prebuild": "mkdir -p scripts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "livereload": "^0.9.3",
    "mysql2": "^3.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-jest": "^30.0.0",
    "chokidar": "^3.5.3",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "er-diagram",
    "mysql",
    "database",
    "visualization"
  ],
  "author": "",
  "license": "MIT"
}
